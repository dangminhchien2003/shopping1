<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:rowmodes="sap.ui.table.rowmodes"
    displayBlock="true"
    controllerName="com.sphinxjsc.shopping1.controller.Detail"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:filterbar="sap.ui.comp.filterbar"
    xmlns:table="sap.ui.table"
>
    <f:DynamicPage
        headerExpanded="true"
        id="dynamicPage"
        showFooter="true"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{header>/name}" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <filterbar:FilterBar
                        id="filterBar"
                        persistencyKey="myPersKey"
                        useToolbar="false"
                        search="onSearch"
                        showClearOnFB="true"
                        clear="onClear"
                        showGoOnFB="true"
                        filterChange="onFilterChange"
                    >
                        <filterbar:filterGroupItems>
                            <filterbar:FilterGroupItem
                                name="Subject"
                                label="Subject"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <filterbar:control>
                                    <Input
                                        id="Subject"
                                        name="Subject"
                                        change="onSearch"
                                    />
                                </filterbar:control>
                            </filterbar:FilterGroupItem>

                            <filterbar:FilterGroupItem
                                name="From"
                                label="From"
                                groupName="Group2"
                                visibleInFilterBar="true"
                            >
                                <filterbar:control>
                                    <Select
                                        id="from"
                                        width="100%"
                                        change="onSearch"
                                    >
                                        <core:Item
                                            key=""
                                            text="All"
                                        />
                                        <core:Item
                                            key="SYSTEM"
                                            text="System"
                                        />
                                        <core:Item
                                            key="USER"
                                            text="User"
                                        />
                                    </Select>
                                </filterbar:control>
                            </filterbar:FilterGroupItem>

                            <filterbar:FilterGroupItem
                                name="Sent on"
                                label="Sent on"
                                groupName="Group3"
                                visibleInFilterBar="true"
                            >
                                <filterbar:control>
                                    <DatePicker
                                        id="datePicker"
                                        calendarWeekNumbering="MiddleEastern"
                                        change="onSearch"
                                    />
                                </filterbar:control>
                            </filterbar:FilterGroupItem>

                            <filterbar:FilterGroupItem
                                name="Priority"
                                label="Priority"
                                groupName="Group4"
                                visibleInFilterBar="true"
                            >
                                <filterbar:control>
                                    <Select
                                        id="priority"
                                        width="100%"
                                        change="onSearch"
                                    >
                                        <core:Item
                                            key=""
                                            text="All"
                                        />
                                        <core:Item
                                            key="1"
                                            text="1 Highest (Express)"
                                        />
                                        <core:Item
                                            key="2"
                                            text="2 Very High"
                                        />
                                        <core:Item
                                            key="3"
                                            text="3 Higher"
                                        />
                                        <core:Item
                                            key="4"
                                            text="4 High"
                                        />
                                        <core:Item
                                            key="5"
                                            text="5 Medium"
                                        />
                                        <core:Item
                                            key="6"
                                            text="6 Low"
                                        />
                                        <core:Item
                                            key="7"
                                            text="7 Lower"
                                        />
                                        <core:Item
                                            key="8"
                                            text="8 Very Low"
                                        />
                                        <core:Item
                                            key="9"
                                            text="9 Lowest"
                                        />
                                    </Select>
                                </filterbar:control>
                            </filterbar:FilterGroupItem>

                            <filterbar:FilterGroupItem
                                name="Due Date"
                                label="Due Date"
                                groupName="Group5"
                                visibleInFilterBar="true"
                            >
                                <filterbar:control>
                                    <DatePicker
                                        id="datePicker2"
                                        calendarWeekNumbering="MiddleEastern"
                                        change="onSearch"
                                    />
                                </filterbar:control>
                            </filterbar:FilterGroupItem>

                            <filterbar:FilterGroupItem
                                name="Status"
                                label="Status"
                                groupName="Group6"
                                visibleInFilterBar="true"
                            >
                                <filterbar:control>
                                    <Select
                                        id="filterStatus"
                                        width="100%"
                                        change="onSearch"
                                    >
                                        <core:Item
                                            key=""
                                            text="All"
                                        />
                                        <core:Item
                                            key="WAITING"
                                            text="Waiting"
                                        />
                                        <core:Item
                                            key="READY"
                                            text="Ready"
                                        />
                                        <core:Item
                                            key="SELECTED"
                                            text="Accepted"
                                        />
                                        <core:Item
                                            key="STARTED"
                                            text="In Process"
                                        />
                                        <core:Item
                                            key="ERROR"
                                            text="Error"
                                        />
                                        <core:Item
                                            key="COMMITTED"
                                            text="Executed"
                                        />
                                        <core:Item
                                            key="COMPLETED"
                                            text="Completed"
                                        />
                                        <core:Item
                                            key="CANCELLED"
                                            text="Logically Deleted"
                                        />
                                        <core:Item
                                            key="CHECKED"
                                            text="In Preparation"
                                        />
                                        <core:Item
                                            key="EXCPCAUGHT"
                                            text="Exception Caught"
                                        />
                                        <core:Item
                                            key="EXCPHANDLR"
                                            text="Exception Active"
                                        />
                                    </Select>
                                </filterbar:control>
                            </filterbar:FilterGroupItem>

                            <filterbar:FilterGroupItem
                                name="Forwarded By"
                                label="Forwarded By"
                                groupName="Group7"
                                visibleInFilterBar="true"
                            >
                                <filterbar:control>
                                    <Select
                                        id="forwwarded"
                                        width="100%"
                                        change="onSearch"
                                    >
                                        <core:Item
                                            key=""
                                            text="All"
                                        />
                                    </Select>
                                </filterbar:control>
                            </filterbar:FilterGroupItem>
                        </filterbar:filterGroupItems>
                    </filterbar:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <table:Table
                id="table"
                rows="{table>/rows}"
                selectionMode="MultiToggle"
            >
                <table:rowMode>
                    <rowmodes:Fixed rowCount="10" />
                </table:rowMode>

                <table:extension>
                    <OverflowToolbar class="sapMTBHeader-CTX">
                        <Label
                            id="title"
                            text="Show:"
                            required="true"
                        />
                        <Select
                            selectedKey="inprogress"
                            width="200px"
                        >
                            <items>
                                <core:Item
                                    key="inprogress"
                                    text="In progress and New"
                                />
                                <core:Item
                                    key="all"
                                    text="All"
                                />
                            </items>
                        </Select>
                        <ToolbarSpacer />
                        <Button icon="sap-icon://action-settings" />
                    </OverflowToolbar>
                </table:extension>

                <table:noData>
                    <IllustratedMessage
                        illustrationType="sapIllus-NoSearchResults"
                        enableVerticalResponsiveness="true"
                    />
                </table:noData>

                <table:columns>
                    <table:Column width="28rem">
                        <Label text="Subject" />
                        <table:template>
                            <Link text="{table>WiText}" />
                        </table:template>
                    </table:Column>

                    <table:Column width="10rem">
                        <Label text="From" />
                        <table:template>
                            <Text text="{table>Mancc}" />
                        </table:template>
                    </table:Column>

                    <table:Column width="10rem">
                        <Label text="Sent On" />
                        <table:template>
                            <Text
                                text="{
                                    path: 'table>WiCd',
                                    formatter: '.formatter.formatDate'
                                }"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column width="10rem">
                        <Label text="Priority" />
                        <table:template>
                            <ObjectStatus
                                text="{
                                    path: 'table>WiPrio',
                                    formatter: '.priorityText'
                                }"
                                state="{
                                    path: 'table>WiPrio',
                                    formatter: '.priorityState'
                                }"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column width="8rem">
                        <Label text="Status" />
                        <table:template>
                            <ObjectStatus
                                text="{
                                    path: 'table>WiStat',
                                    formatter: '.statusText'
                                }"
                                state="{
                                    path: 'table>WiStat',
                                    formatter: '.statusState'
                                }"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column width="10rem">
                        <Label text="Due date" />
                        <table:template>
                            <Text
                                text="{
                                    path: 'table>WiAed',
                                    formatter: '.formatter.formatDate'
                                }"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column width="12rem">
                        <Label text="Forwarded By" />
                        <table:template>
                            <Text text="{table>WiForwBy}" />
                        </table:template>
                    </table:Column>
                </table:columns>
            </table:Table>
        </f:content>
        <f:footer>
            <OverflowToolbar id="footer">
                <Button
                    text="Refresh"
                    type="Default"
                    press="onRefresh"
                />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
